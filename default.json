{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    ":pinAllExceptPeerDependencies"
  ],
  "packageRules": [
    {
      "description": "Auto-merge test packages",
      "matchPackageNames": [
        "vitest"
      ],
      "automerge": true
    },
    {
      "description": "Auto-merge lint packages",
      "matchPackageNames": [
        "@biomejs/biome"
      ],
      "automerge": true
    },
    {
      "description": "Update node version of this action",
      "matchPackageNames": [
        "node",
        "@types/node"
      ],
      "groupName": "node",
      "groupSlug": "node",
      "versioning": "npm",
      "allowedVersions": "24.x"
    },
    {
      "description": "Do not replace @tsconfig/node to new major version",
      "matchPackageNames": [
        "@tsconfig/node*"
      ],
      "matchUpdateTypes": [
        "replacement"
      ],
      "enabled": false
    },
    {
      "description": "Replace @tsconfig/node20 with @tsconfig/node24",
      "matchPackageNames": [
        "@tsconfig/node20"
      ],
      "replacementName": "@tsconfig/node24",
      "groupName": "node",
      "groupSlug": "major-node"
    }
  ],
  "customManagers": [
    {
      "customType": "regex",
      "description": "Update node version of using field in action.yaml",
      "managerFilePatterns": [
        "**/action.yaml",
        "**/action.yml"
      ],
      "matchStrings": [
        "using: 'node(?<currentValue>\\d+)'"
      ],
      "depNameTemplate": "node",
      "datasourceTemplate": "npm"
    },
    {
      "customType": "regex",
      "description": "Update @tsconfig/node version in tsconfig.json",
      "managerFilePatterns": [
        "**/tsconfig.json"
      ],
      "matchStrings": [
        "@tsconfig/node(?<currentValue>\\d+)/"
      ],
      "depNameTemplate": "node",
      "datasourceTemplate": "npm"
    },
    {
      "customType": "regex",
      "description": "Update this config by self",
      "datasourceTemplate": "github-releases",
      "depNameTemplate": "int128/typescript-action-renovate-config",
      "managerFilePatterns": [
        "renovate.json",
        "renovate.json5",
        ".github/renovate.json",
        ".github/renovate.json5"
      ],
      "matchStrings": [
        "\"github>int128/typescript-action-renovate-config#(?<currentValue>.+?)\"",
        "\"github>int128/typescript-action-renovate-config:.+?#(?<currentValue>.+?)\""
      ]
    }
  ]
}
